.status-bar {
  position: fixed;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: 25px;
  display: flex;
  overflow: hidden;
  justify-content: space-between;
  z-index: 998;
  color: #272832;
  transition-property: all;
  background: rgba(255, 255, 255, 0.96);
}
.status-bar .login-c {
  width: 60rpx;
  height: 60rpx;
  padding-top: 22rpx;
  padding-left: 32rpx;
}
.status-bar .login-back {
  width: 20rpx;
  height: 34rpx;
}
.status-bar .scrollv {
  width: 84%;
}
.status-bar .scrollv .users {
  display: flex;
}
.status-bar .scrollv .users .user-l {
  padding: 12rpx 8rpx;
  position: relative;
}
.status-bar .scrollv .users .user-l image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.status-bar .scrollv .users .user-l .tip {
  width: 14rpx;
  height: 14rpx;
  background: #ff4d3c;
  position: absolute;
  top: 12rpx;
  right: 10rpx;
  border-radius: 50%;
  z-index: 10;
}
.main {
  padding: 160rpx 28rpx 160rpx;
}
.main .msg,
.modfiy-mian .msg {
  display: flex;
  align-items: flex-end;
  padding: 40rpx 0;
}
.main .msg image,
.modfiy-mian .msg image {
  flex: none;
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  margin: 0 20rpx;
}
.main .msg .nr .neir,
.modfiy-mian .msg .nr .neir {
  max-width: 380rpx;
  padding: 26rpx 32rpx;
  min-height: 48rpx;
  font-size: 28rpx;
  color: #191d23;
  line-height: 40rpx;
}
.main .msg .nr .nt,
.modfiy-mian .msg .nr .nt {
  padding-top: 8rpx;
  position: absolute;
  font-size: 24rpx;
  color: rgba(25, 29, 35, 0.5);
  line-height: 34rpx;
}
.main .left,
.modfiy-mian .left {
  flex-direction: row;
}
.main .left .neir,
.modfiy-mian .left .neir {
  background: #f4f4f4;
  border-radius: 24rpx 24rpx 24rpx 0px;
}
.main .right,
.modfiy-mian .right {
  flex-direction: row-reverse;
}
.main .right .neir,
.modfiy-mian .right .neir {
  background: #ffeade;
  border-radius: 24rpx 24rpx 0px 24rpx;
}
.main .right .nt,
.modfiy-mian .right .nt {
  right: 132rpx;
}
.main .center,
.modfiy-mian .center {
  text-align: center;
  padding: 32rpx 0 20rpx;
}
.main .center .inner,
.modfiy-mian .center .inner {
  font-size: 24rpx;
  display: inline-block;
  color: rgba(25, 29, 35, 0.5);
  line-height: 34rpx;
}
.send {
  position: fixed;
  z-index: 1002;
  bottom: 0;
  width: 100%;
  padding-bottom: 25px;
  min-height: 100rpx;
  background: rgba(255, 255, 255, 0.96);
  display: flex;
  flex-direction: row;
}
.send .chat-send {
  margin: 12rpx 48rpx;
  flex: 1;
  width: 100%;
  min-height: 40rpx;
  background: #f2f2f2;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #191d23;
  line-height: 40rpx;
  padding: 24rpx 80rpx 24rpx 24rpx;
}
.send image {
  width: 48rpx;
  height: 48rpx;
  flow: left;
  right: 68rpx;
  top: 32rpx;
}
.modify {
  position: fixed;
  overflow: hidden;
  left: 0;
  bottom: -90%;
  width: 100%;
  height: 90%;
  z-index: 1000;
  background: #fff;
  border-radius: 48rpx 48rpx 0px 0px;
}
.u-name {
  position: absolute;
  top: 0;
  background-color: #fff;
  height: 80rpx;
  text-align: center;
  width: 100%;
  line-height: 80rpx;
}
.modfiy-mian {
  padding: 88rpx 28rpx 120rpx;
  box-sizing: border-box;
  height: 100%;
}
.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.4);
}

